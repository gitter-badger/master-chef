<div class="header">
  <ul class="nav nav-pills pull-right">
    <%= nav_link('Home', root_path) %>

    <% if current_user %>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <%= image_tag avatar_url(current_user, 20), size: '20x20', class: 'img-circle' %>
          <%= current_user.name %>
          <span class="caret"></span>
        </a>

        <ul class="dropdown-menu">

          <li><%= menu_item('Projects', projects_path) %></li>

          <li role="presentation" class="divider"></li>

          <% if current_user.superadmin? %>
            <li><%= menu_item('Delayed Jobs', delayed_job_path, target: '_blank') %></li>

            <li role="presentation" class="divider"></li>
          <% end %>

          <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
        </ul>
      </li>
    <% else %>
      <%= menu_item('Login', new_user_session_path) %>
      <%= menu_item('Registration', new_user_registration_path) %>
    <% end %>
  </ul>
  <h3 class="text-muted"><%= Settings.title %></h3>
</div>
