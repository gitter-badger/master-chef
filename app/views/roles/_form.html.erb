<div class="form-group <%= @role.errors.present? && (@role.errors['name'].present? ? 'has-error' : 'has-success') %>">
  <%= f.label :name, class: 'control-label' %>
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group <%= @role.errors.present? && (@role.errors['config'].present? ? 'has-error' : 'has-success') %>">
  <%= f.label :config, class: 'control-label' %>
  <%= f.hidden_field :config, class: 'form-control ace-editor', data: { language: :json } %>
</div>
