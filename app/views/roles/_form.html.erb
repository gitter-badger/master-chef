<%= simple_form_for [@project, @role] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  <div class="form-group">
    <%= f.label :config %>
    <%= f.hidden_field :config, class: 'ace-source' %>
    <div class='form-control ace-editor' data-language='json'>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
