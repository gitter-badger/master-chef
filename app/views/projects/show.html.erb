<%= render 'shared/project_navigation_tabs' %>

<table class='table'>
  <thead>
  <tr>
    <th>Node</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
    <%= render @project.nodes %>
    <tr>
      <td colspan="2">
        <%= link_to ' + Add new node', new_project_node_path(@project) %>
      </td>
    </tr>
  </tbody>
</table>

<table class='table'>
  <thead>
  <tr>
    <th>Role</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
    <%= render @project.roles %>
    <tr>
      <td colspan="2">
        <%= link_to ' + Add new role', new_project_role_path(@project) %>
      </td>
    </tr>
  </tbody>
</table>

<p>
  <strong>CookBooks:</strong>
  <pre class='ace-highlight' data-language='ruby'>
    <%= @project.cookbooks %>
  </pre>
</p>
