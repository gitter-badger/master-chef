<%= simple_form_for [@project, @node] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :credentials %>
    <%= f.hidden_field :credentials, class: 'form-control ace-editor', data: { language: 'yaml' } %>
  </div>
  <div class="form-group">
    <%= f.label :config %>
    <%= f.hidden_field :config, class: 'form-control ace-editor' %>
  </div>
  <button type="submit" class="btn btn-success">Upate node</button>
<% end %>
