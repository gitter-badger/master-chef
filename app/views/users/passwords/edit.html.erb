<% if resource.errors.present? %>
  <div class="alert fade in alert-danger alert-dismissable">
    <button aria-hidden="true" class="close" data-dismiss="alert" type="button">Ã—</button>
    <%= resource.errors.full_messages.join('. ') %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-10 col-sm-10 col-md-offset-1 col-lg-10 col-lg-offset-1 col-sm-offset-1">

    <h2 class="text-center">Change your password</h2>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name),
                 :html => {:method => :put, class: 'form-horizontal', role: 'form'}) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, 'New password', class: 'control-label col-sm-5' %>
        <div class="col-sm-5">
          <%= f.password_field :password, required: true, autofocus: true, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'Confirm your new password', class: 'control-label col-sm-5' %>
        <div class="col-sm-5">
          <%= f.password_field :password_confirmation, required: true, class: 'form-control' %>
        </div>
      </div>

      <%= f.submit 'Change my password', class: 'btn btn-primary btn-lg btn-block' %>
    <% end %>

    <br />

    <%= render "users/shared/links" %>
  </div>
</div>

