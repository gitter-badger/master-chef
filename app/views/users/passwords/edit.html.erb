<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">

      <h2 class="text-center">Change your password</h2>

      <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :put, class: 'form-horizontal'}) do |f| %>
        <%= f.input :reset_password_token, :as => :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-group">
          <%= f.lable :password, 'New password', class: 'control-label' %>
          <%= f.text_field :password, required: true, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.lable :password_confirmation, 'Confirm your new password', class: 'control-label' %>
          <%= f.text_field :password_confirmation, required: true, class: 'control-label' %>
        </div>

        <%= f.submit 'Change my password', class: 'btn-primary' %>
      <% end %>
    </div>
    <%= render "users/shared/links" %>
  </div>
</div>
