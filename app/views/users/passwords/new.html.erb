<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">

      <h2 class="text-center">Forgot your password?</h2>

      <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post, class: 'form'}) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.lable :email, 'Email', class: 'control-label' %>
          <%= f.text_field :email, required: true, autofocus: true, class: 'form-control' %>
        </div>

        <%= f.submit 'Send me reset password instructions', class: 'btn-primary' %>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
