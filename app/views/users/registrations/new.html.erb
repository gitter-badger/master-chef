<% if resource.errors.present? %>
  <div class="alert fade in alert-danger alert-dismissable">
    <button aria-hidden="true" class="close" data-dismiss="alert" type="button">Ã—</button>
    <%= resource.errors.full_messages.join('. ') %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-8 col-sm-8 col-md-offset-2 col-lg-8 col-lg-offset-2 col-sm-offset-2">

    <h2 class="text-center">Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.label :email, class: 'control-label' %>
        <%= f.text_field :email, required: true, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :first_name, class: 'control-label' %>
        <%= f.text_field :first_name, required: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :last_name, class: 'control-label' %>
        <%= f.text_field :last_name, required: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, class: 'control-label' %>
        <%= f.password_field :password, required: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: 'control-label' %>
        <%= f.password_field :password_confirmation, required: true, class: 'form-control' %>
      </div>

      <%= f.submit 'Sign up', class: 'btn btn-success btn-lg btn-block' %>
    <% end %>

    <%= render 'users/shared/links' %>
  </div>
</div>
